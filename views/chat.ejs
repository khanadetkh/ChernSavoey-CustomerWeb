<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <!-- CSS -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,300,600" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/chat.css">
    <link rel="icon" type="image/png" href="/images/favicon.png"/>
    <title>Real Time Chat</title>

</head>

<%- include ("layout.ejs") %>

    <div class="chat_window">
            <div class="card-header">
             <h6 id="username"  value="<%= user.displayName %>"><%= user.displayName %></h6>
            </div>

            <div class="message-box message-box-box">
                <ul class="list-group list-group-flush" id="message-list"></ul>
                <div class="info"></div>
            </div>
       
        <div class="bottom_wrapper clearfix">
            <div class="message_input_wrapper">
                <input type="hidden" id="orderId" value="<%= orderId %>">
                <input type="text" class="message_input" id="message" placeholder="Type your message here...">
                <div class="input-group-append">
                    <button class="btn btn-success" type="button" id="messageBtn">
                            Send
                        </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.1/socket.io.min.js" integrity="sha512-/WwtKR6NnHomLo0O4w9QKc1INTPEJs7ko6u2aBTA1paPldhPl8LtXsi7a35iEZ69+9P5dcgVNESG8hrP4Y2t3w==" crossorigin="anonymous"></script>

    <script src="/javascripts/chatroom.js"></script>

</html>